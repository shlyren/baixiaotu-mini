<view class="container">
  <view class="item-wapper" wx:for="{{ items }}" wx:key="mainlist">
    <item-view 
      class="content"
      data-index="{{ index }}"
      item="{{ item }}"
      divider="{{ index < items.length - 1 }}"
      bindtap="onItemClick">
    >
    </item-view>
    <view wx:if="{{ index >= items.length - 1 }}" class="weui-loadmore weui-loadmore_line">
      <view class="weui-loadmore__tips weui-loadmore__tips_in-line">已经到底啦(～￣▽￣)～</view>
    </view>
  </view>
</view>