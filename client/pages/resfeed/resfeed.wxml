<form bindsubmit="submitForm">
  <view class="weui-form page" >
    <view class="content">
      <view class="weui-form__text-area">
        <view class="weui-form__title">{{ item.title }}</view>
        <!-- <view class="weui-form__desc">表单描述示意</view> -->
      </view>
      <view class="weui-form__control-area">
        <view class="weui-cells__group weui-cells__group_form">
            <view class="weui-cells weui-cells_form">
              <view class="weui-cell">
                <view class="weui-cell__hd"><label class="weui-label">联系方式</label></view>
                <view class="weui-cell__bd">
                  <input 
                    class="weui-input" 
                    name="mail" 
                    type="text" 
                    placeholder="请输入联系方式" 
                    style="font-size: 32rpx;" 
                  />
                </view>
              </view>
              <view class="weui-cell">
                <view class="weui-cell__hd"><label class="weui-label">反馈内容</label></view>
                <view class="weui-cell__bd">
                  <textarea 
                    class="weui-textarea" 
                    name="message"
                    placeholder="请输入反馈内容" 
                    style="height: 6.3em; font-size: 32rpx;" 
                  />
                  <!-- <view class="weui-textarea-counter">0/200</view> -->
                </view>
              </view>
            </view>
        </view>
      </view>
    </view>
    
    <view>
      <button type="primary" form-type="submit">提  交</button>
    </view>
    
  </view>
</form>
