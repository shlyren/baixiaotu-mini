
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.top-wrapper {
  flex-grow: 1;
}

.search-wrapper {
  padding: 14rpx;
  background: #32CD32;
}

.search {
  display: flex;
  align-items: center;
  justify-content: center;
  background: white;
  border-radius: 10rpx;
  font-size: 30rpx;
  height: 54rpx;
  color: #515151;
}

.search image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.section-wrapper {
  display: flex;
  flex-direction: column;
}

.section-title-wrapper {
  display: flex;
  justify-content: space-between; 
  padding: 10rpx;
  font-size: 40rpx;
}

.section-title-wrapper .right {
  color: #888;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  padding-right: 10rpx;
}

.right-row {
  width: 15rpx;
  height: 15rpx;
  border-top: 1rpx solid #888;
  border-right: 1rpx solid #888;
  transform: rotate(45deg);
}

.section-wrapper .list-wrapper {
  display: flex;
  flex-wrap: wrap;
  padding: 0 10rpx 10rpx;
}


.list-wrapper .view-all {
  text-align: center;
  color: #888;
  width: 100%;
  margin:  7rpx 3rpx 4rpx;
  padding: 13rpx 0;
  border: 1rpx solid #999;
  border-radius: 8rpx;
}

.section-wrapper .item-wrapper {
  display: flex;
  width: 48%;
  flex-direction: column;
  padding: 0 1%;
}

.list-wrapper .cover {
  width: 100%;
  flex-grow: 1;
}

.list-wrapper-0 .item-wrapper .cover {
  height: 500rpx;
}

.list-wrapper-1 .item-wrapper .cover {
  height: 240rpx;
}


.item-wrapper .title-wrapper {
  display: flex;
  justify-content: space-between;
  align-items:  center;
  margin:  7rpx 0 15rpx;
  font-size: 32rpx;
}

.item-wrapper .title-wrapper .right {
  display: flex;
  font-size: 24rpx;
  color: #888;
  align-items: center;
}

.item-wrapper .title-wrapper .right image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 7rpx;
}

.footer-wrapper {
  text-align: center;
  padding: 20rpx 0 30rpx;
  color: #888;
  font-size: 28rpx;
}

.footer-wrapper a {
  text-decoration: underline;
}